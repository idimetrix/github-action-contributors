{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "resolveJsonModule": true,
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "lib",
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["lib"]
}
